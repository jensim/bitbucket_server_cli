#!/bin/sh
set -e

hookDir=$(dirname "$0")
WORKDIR=$(git rev-parse --show-toplevel)

cd $WORKDIR
[[ ! -f .env ]] && cp .env_default .env
set -o allexport
[[ -f .env ]] && source .env
set +o allexport

#gem install travis
#travis lint .travis.yml --exit-code

cargo fmt
cargo clippy

cargo build
cargo test --verbose
